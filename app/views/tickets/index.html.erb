<p id="notice"><%= notice %></p>

<h1>Listing Tickets</h1>

<table>
  <thead>
    <tr>
      <th>Event</th>
      <th>Venue</th>
      <th>Artist</th>
      <th>Date</th>
      <th>Tickets left</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tickets.each do |ticket| %>
      <tr>
        <td><%= ticket.event.name %></td>
        <td><%= ticket.event.venue.address %></td>
        <td><%= ticket.event.artist.name %></td>
        <td><%= ticket.event.human_readable_time %></td>
        <td><%= ticket.event.human_readable_date %></td>
        <td><%= ticket.event.venue.capacity %></td>
        <td><%= link_to 'Show', ticket %></td>
        <td><%= link_to 'Edit', edit_ticket_path(ticket) %></td>
        <td><%= link_to 'Destroy', ticket, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ticket', new_ticket_path %>
